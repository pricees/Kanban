<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.select :user_id,
    options_from_collection_for_select(
    User.all, "id", "name", @comment.user_id),
    { include_blank: "[pick user]" } %>

  </div>
  <div class="field">
    <%= f.label :story_id %><br />
    <%= f.select :story_id,
    options_from_collection_for_select(
    Story.all, "id", "name", @comment.story_id),
    { include_blank: "[pick story]" } %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
